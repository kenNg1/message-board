{{#if addNewAnswer}}
    <div class="panel center">
      <h1>New Answer</h1>
      <form>
        <div class="form-group">
          <label for="author">Posted by</label>
          {{input value=author id="author"}}
        </div>
        <div class="form-group">
          <label for="content">Content</label>
          {{input value=content id="content"}}
        </div>
        <button {{action 'saveAnswer'}}>Save</button>
      </form>
    </div>
  {{else}}
    <button id="newAnswer" {{action 'answerFormShow'}}>New Answer</button>
  {{/if}}
