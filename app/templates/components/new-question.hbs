{{#if addNewQuestion}}
  <h1>New Question </h1>
  <div>
    <form>
      <div class="form-group">
      <label for="heading">Question</label>
      {{input value=heading id="heading"}}
      </div>

      <div class="form-group">
      <label for="author">Posted by</label>
      {{input value=author id="author"}}
      </div>

      <div class="form-group">
      <label for="notes">More details</label>
      {{input value=notes id="notes"}}
      </div>
      <button {{action 'saveQuestion'}}>Save</button>
    </form>
  </div>
{{else}}
  <button {{action 'questionFormShow'}}> New Question </button>
{{/if}}
